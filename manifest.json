{
  "manifest_version": 2,
  "name": "amazon_url_shortener",
  "description": "Chrome extension to automatically shorten Amazon product URL.",
  "version": "0.0.4",
  "options_page": "html/options.html",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://amazon.co.jp/*",
        "https://www.amazon.co.jp/*"
      ],
      "js": ["js/script.js"]
    }
  ],
  "permissions": [
    "https://amazon.co.jp/",
    "https://www.amazon.co.jp/"
  ]
}
