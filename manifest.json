{
  "manifest_version": 2,
  "name": "amazon_url_shortener",
  "description": "Chrome extension to automatically shorten Amazon product URL.",
  "version": "0.1.0",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://amazon.co.jp/*",
        "https://www.amazon.co.jp/*"
      ],
      "js": ["js/contentScript.js"]
    }
  ],
  "permissions": [
    "https://amazon.co.jp/",
    "https://www.amazon.co.jp/"
  ]
}
